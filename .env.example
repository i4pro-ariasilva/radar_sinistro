# Configuração de Exemplo para Radar de Sinistro
# Copie este arquivo para .env na raiz do projeto e ajuste conforme necessário

# Configurações do Banco de Dados
DATABASE_PATH=database/radar_sinistro.db

# Configurações da API Climática
WEATHER_CACHE_TIMEOUT=3600
WEATHER_API_RETRIES=3

# Configurações de Logging
LOG_LEVEL=INFO
LOG_FILE=logs/radar_sinistro.log

# Configurações ML
MODEL_UPDATE_INTERVAL=86400
PREDICTION_CACHE_SIZE=1000

# Configurações Streamlit
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost